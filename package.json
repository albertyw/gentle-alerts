{
  "name": "gentle-alerts",
  "version": "1.2.1",
  "description": "Convert alerts into gentle notifications",
  "scripts": {
    "test": "npm run uglify && npm run eslint && npm run test-bdd",
    "eslint": "eslint gentle-alerts test",
    "test-bdd": "npm run nyc-instrument && npm run mocha && nyc report -r text -r lcov",
    "nyc-instrument": "nyc instrument ./gentle-alerts ./instrumented",
    "mocha": "mocha-headless-chrome -f ./test/index.htm -c .nyc_output/coverage.json",
    "uglify": "uglifyjs --compress --mangle --wrap GentleAlerts -o gentle-alerts/script.min.js -- gentle-alerts/script.js",
    "package": "npm run clean && npm run uglify && zip -r gentle-alerts.zip gentle-alerts",
    "clean": "rm -f gentle-alerts/script.min.js && rm -f gentle-alerts.zip && find | grep DS | xargs rm -f"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/albertyw/gentle-alerts.git"
  },
  "author": "Albert Wang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/albertyw/gentle-alerts/issues"
  },
  "homepage": "https://github.com/albertyw/gentle-alerts#readme",
  "devDependencies": {
    "chai": "^4.0.0",
    "eslint": "^4.19.1",
    "jquery": "^3.3.1",
    "mocha": "^5.1.1",
    "mocha-headless-chrome": "^2.0.0",
    "nyc": "^11.7.3",
    "uglify-js": "^3.3.25"
  },
  "engines": {
    "node": ">=8"
  },
  "dependencies": {}
}
