{
  "name": "gentle-alerts",
  "version": "1.3.4",
  "description": "Convert alerts into gentle notifications",
  "type": "module",
  "scripts": {
    "test": "pnpm run build && pnpm run eslint && pnpm run wdio",
    "eslint": "eslint -c .eslint.config.js gentle-alerts test",
    "package": "pnpm run clean && pnpm run build && zip -r gentle-alerts.zip gentle-alerts",
    "clean": "rm -f gentle-alerts/gentle-alerts.min.js && rm -f gentle-alerts.zip && find | grep DS | xargs rm -f",
    "build": "webpack && cp dist/main.js gentle-alerts/gentle-alerts.min.js && rm -r dist",
    "wdio": "wdio run ./wdio.conf.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/albertyw/gentle-alerts.git"
  },
  "author": "Albert Wang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/albertyw/gentle-alerts/issues"
  },
  "homepage": "https://github.com/albertyw/gentle-alerts#readme",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@wdio/browser-runner": "^9.23.2",
    "@wdio/cli": "^9.23.2",
    "@wdio/mocha-framework": "^9.23.2",
    "@wdio/spec-reporter": "^9.23.2",
    "chai": "^6.2.2",
    "css-minimizer-webpack-plugin": "^7.0.4",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "jquery": "^3.7.1",
    "sinon": "^21.0.1",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "engines": {
    "node": ">=8"
  }
}
