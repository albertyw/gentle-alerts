{
  "name": "gentle-alerts",
  "version": "0.2.0",
  "description": "Convert alerts into gentle notifications",
  "scripts": {
    "test": "npm run eslint && npm run test-bdd",
    "eslint": "eslint gentle-alerts/script.js",
    "test-bdd": "npm run istanbul-instrument && npm run mocha && istanbul report",
    "istanbul-instrument": "istanbul instrument -i ./gentle-alerts -o ./instrumented",
    "mocha": "mocha-phantomjs -k mocha-phantomjs-istanbul ./test/index.htm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/albertyw/gentle-alerts.git"
  },
  "author": "Albert Wang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/albertyw/gentle-alerts/issues"
  },
  "homepage": "https://github.com/albertyw/gentle-alerts#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^3.15.0",
    "istanbul": "^0.4.5",
    "jquery": "^3.1.1",
    "mocha": "^3.2.0",
    "mocha-phantomjs": "^4.1.0",
    "mocha-phantomjs-istanbul": "0.0.2"
  }
}
